@using WebApp.ViewModels;
@model AccountStockViewModelList
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="custom-table">
    <thead>
        <tr>
            <th>Symbol</th>
            <th>Date</th>
            <th>Add to Favorite</th>
            <th>Delete Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AccountStockModels)
        {
            <tr>
                <td>@item.Symbol</td>
                <td>@item.Date</td>
                <td>
                    <form method="post" asp-area="" asp-controller="Favorite" asp-action="AddToFavorite">
                        <input asp-for="@item.Symbol" name="Symbol" type="hidden" />
                        <input asp-for="@item.Date" name="Date" type="hidden" />
                        <input asp-for="@item.StockID" name="StockID" type="hidden" />
                        <button type="submit" class="btn btn-primary">Add Stock</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-area="" asp-controller="AccountStock" asp-action="DeleteStock">
                        <input asp-for="@item.Symbol" name="Symbol" type="hidden" />
                        <input asp-for="@item.Date" name="Date" type="hidden" />
                        <input asp-for="@item.StockID" name="StockID" type="hidden" />
                        <button type="submit" class="btn btn-primary">Delete Stock</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
