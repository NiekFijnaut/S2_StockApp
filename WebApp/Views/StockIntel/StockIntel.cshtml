
@{
    ViewData["Title"] = "StockIntel";
}

<head>

    <title>StockApp</title>
        
</head>
<body>
    <main>
        <h1>StockIntel</h1>
        <form asp-action="SearchStockIntel">
             <div class="mb-3">
                <label class="form-label" asp-for="Symbol"></label>
                <input class="form-control" asp-for="Symbol"/>
                <span asp-validation-for="Symbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interval">Interval:</label>
                <select asp-for="Interval" class="form-control">
                    <option value="">--Select an interval--</option>
                    <option value="1 min">1 min</option>
                    <option value="5 min">5 min</option>
                    <option value="15 min">15 min</option>
                    <option value="30 min">30 min</option>
                    <option value="60 min">60 min</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Show StockIntel</button>
            <button type="submit" class="btn btn-primary">Add Stock to account</button>
        </form>
    </main>
    <script></script>
</body>



